@model nightowlsign.data.Models.Schedule.ScheduleViewModel
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "Schedules";
}
@using (Html.BeginForm())
{
    <!-- Start Hidden form -->
    @Html.HiddenFor(m => m.EventCommand)
    @Html.HiddenFor(m => m.EventArgument)
    @Html.HiddenFor(m => m.Mode)
    <!-- End Hidden form-->
    <!-- Start Search Area -->
    if (Model.IsSearchVisible)
    {
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title"></div>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.SearchEntity.Name, "Name")
                    @Html.TextBoxFor(m => m.SearchEntity.Name, new { @class = "form-control" })
                </div>

            </div>
            <div class="panel-footer">
                <button id="btnSearch" class="btn btn-sm btn-primary" data-pdsa-action="search">
                    <i class="glyphicon glyphicon-search"></i>&nbsp;Search
                </button>
                <button id="btnReset" class="btn btn-sm btn-primary" data-pdsa-action="resetsearch">
                    <i class="glyphicon glyphicon-share-alt"></i>&nbsp; Reset
                </button>
                <button id="btnAdd" class="btn btn-sm btn-primary" data-pdsa-action="add">
                    <i class="glyphicon glyphicon-plus-sign"></i>&nbsp; Add
                </button>
            </div>

        </div>
    }
    <!-- End Search Area-->

     <!-- Start List Area  -->
    if (Model.IsListAreaVisible)
    {
        <div class="table-responsive">
            <table class="table table-condensed table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th class="pdsa-action-button-column">Edit</th>
                        <th data-toggle="tooltip" title="A schedule is a list of images to be displayed"> Name</th>
                        <th class="centrealign">Action</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th class="pdsa-action-button-column">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Schedules)
                    {
                        <tr>
                            <td class="pdsa-action-button-column"><a href="#" data-pdsa-action="edit" data-pdsa-val="@item.Id" class="btn btn-sm btn-default"><i class="glyphicon glyphicon-edit"></i></a></td>
                            <td>
                                @item.Name
                                @*@Html.ActionLink(@item.Name, "Index", "Display", new { id = item.Id, Model = item.Name }, null)*@
                            </td>
                            <td class="centrealign">
                                <a href="@Url.Action("Index", "ScheduleSign", new {scheduleId = item.Id, scheduleName = item.Name})" data-toggle="tooltip" title="Signs to apply the schedule to." class="btn btn-sm btn-default" alt="Sign List"><i class="fa fa-television" aria-hidden="true"></i></a>
                                <a href="@Url.Action("Index", "ScheduleImage",new {scheduleId = item.Id, scheduleName = item.Name })" data-toggle="tooltip" title="Images to apply to the schedule." class="btn btn-sm btn-default" alt="Images for this schedule"><i class="glyphicon glyphicon-camera"></i></a>
                                <a href="@Url.Action("Index", "SendToSign",new {scheduleId = item.Id, scheduleName = item.Name })" data-toggle="tooltip" title="Create PlayBil file and send Images down to Sign." class="btn btn-sm btn-default" alt="Images for this schedule"><i class="fa fa-upload" aria-hidden="true"></i></a>
                           </td>
                            <td>@item.StartDate.Value.ToString("dd MMM yyyy")</td>
                            <td>@item.EndDate.Value.ToString("dd MMM yyyy")</td>
                            <td class="pdsa-action-button-column"><a href="#" data-pdsa-action="delete" data-pdsa-val="@item.Id" class="btn btn-sm btn-default"><i class="glyphicon glyphicon-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <!-- End List Area-->
    <!--Detail Area-->
    if (Model.IsDetailVisible)
    {
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1 class="panel-title">
                    Schedule
                </h1>
            </div>
            <div class="panel-body">
                <!-- Begin Message Area -->
                <div class="row">
                    <div class="col-sm-12">
                        @if (!Model.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissable" role="alert">
                                <button type="button" class="close" data-dissmiss="alert">
                                    <span aria-hidden="true">&times</span>

                                    <span class="sr-only">Close</span>
                                </button>
                                @Html.ValidationSummary(false)
                            </div>
                        }
                    </div>
                </div>
                <!-- End message Area-->
                <div class="form-group">
                    @Html.HiddenFor(m => m.Entity.Id)
                    @Html.LabelFor(m => m.Entity.Name, "Schedule")
                    @Html.TextBoxFor(m => m.Entity.Name, new { @class = "form-control" })
                </div>

                <div class="form-group input-group-sm">
                    @Html.LabelFor(m => m.Entity.StartDate, "Start Date")
                    @Html.TextBoxFor(m => m.Entity.StartDate, "{0:dd MMM yyyy}", new { @class = "form-control datepicker", placeholder = "Enter start date here..." })
                    @Html.ValidationMessageFor(m => m.Entity.StartDate)

                </div>
                <div class="form-group input-group-sm">
                    @Html.LabelFor(m => m.Entity.EndDate, "End Date")
                    @Html.TextBoxFor(m => m.Entity.EndDate, "{0:dd MM yyyy}", new { @class = "form-control datepicker", placeholder = "Enter end date here..." })
                   @Html.ValidationMessageFor(m => m.Entity.EndDate)
                </div>

            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <button class="btn btn-primary" id="btnSave" data-pdsa-action="save">
                            <i class="glyphicon glyphicon-floppy-disk"></i>&nbsp; Save
                        </button>
                        <button class="btn btn-primary" formnovalidate id="btnCancel" data-pdsa-action="cancel">
                            <i class="glyphicon glyphicon-remove-circle"></i>&nbsp;Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>

    }

    <!-- End Detail Area-->
    <script type="text/javascript">
    $(function () { // will trigger when the document is ready
        $('.datepicker').datepicker({format: 'dd MMM yyyy'}); //Initialise any date pickers
    });
    </script>
}

